{
    "name": "piwind/oauth-microsoft",
    "description": "Log in to your Flarum forum with Microsoft",
    "keywords": [
        "flarum", "microsoft", "sso", "oauth", "login"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/piwind/flarum-ext-oauth-microsoft/issues",
        "source": "https://github.com/piwind/flarum-ext-oauth-microsoft"
    },
    "require": {
        "flarum/core": "^1.2.0",
        "fof/oauth": "^1.3.0",
        "stevenmaguire/oauth2-microsoft": "^2.2"
    },
    "authors": [
        {
            "name": "piwind",
            "homepage": "https://github.com/piwind"
        },
        {
            "name": "xrh0905",
            "homepage": "https://github.com/xrh0905"
        }
    ],
    "autoload": {
        "psr-4": {
            "piwind\\OAuthMicrosoft\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Log In With Microsoft",
            "category": "feature",
            "icon": {
                "name": "fab fa-microsoft",
                "backgroundColor": "#0072e3",
                "color": "#fff"
            }
        }
    }
}
